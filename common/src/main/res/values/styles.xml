<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="StyleText1" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StyleText1.Medium" parent="AppTheme">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="StyleText1.Bold" parent="StyleText1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleText2" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyleText2.Grey" parent="StyleText2">
        <item name="android:textColor">@color/grey4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StyleText2.Bold" parent="StyleText2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleText2.Red" parent="StyleText2">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="StyleText2.Green" parent="StyleText2">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="StyleText2.Green.Bold" parent="StyleText2.Green">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Small.StyleText1.Red" parent="AppTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Small.StyleText2.Red" parent="AppTheme">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ButtonBorderLess" parent="@android:style/Widget.Holo.Light.Button.Borderless.Small">
        <item name="android:textColor">@color/blackFont</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>
